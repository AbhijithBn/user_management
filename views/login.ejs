<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>
            User Login
        </title>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <!-- <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css"> -->
    
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
        <!-- <link rel="stylesheet" href="../font/css/all.css" > -->

        <link href="https://fonts.googleapis.com/css?family=Arvo&display=swap" rel="stylesheet">

        <style>
        body{
            background-color: rgb(8, 79, 100);
            font-family: 'Arvo', serif;
        }
        h3{
            font-family: 'Arvo', serif;       
        }
        .card{
            border-radius: 20px;
        }
        .card-header{
            border: white;
            background-color:white;
            color: rgba(14, 125, 168, 0.972);
        }
        .input-group-text{
            color: rgb(255, 255, 255);
            background-color: rgba(113, 210, 248, 0.972);
        }
        input::placeholder{
            color: rgba(113, 210, 248, 0.972);
        }
        hr{
            background-color: rgb(162, 177, 189)
        }
        .card-footer{
            background-color: white;
            border-top: 2px solid rgb(21, 134, 168);
        }
        div{
            text-align: center;    
        }
        input{
        }
        </style>
    </head>
    <body>
        <!-- control over entire area of the webpage -->
        <div class="container">

            <!-- d-flex h-100 justify-content-center  can be used if just login is needed-->
            <div class="d-flex h-100 justify-content-center ">
                
                <!-- enclosed login form in a card -->
                <div class="card mt-5 shadow-lg p-4 mb-4 bg-white">

                    <!-- CARD HEADER -->
                    <div class="d-flex card-header justify-content-center">
                        <h3>Welcome</h3>
                    </div>
                    
                    <!-- CARD BODY -->
                    <div class="card-body">
                        <form class='form-signin', action='/login', method='post' onsubmit="return formValidation()"> 

                            <!-- USERNAME OR EMAIL       -->
                            <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input id='username' type="text" name="username" class="form-control" placeholder="username" >
                            </div>

                            <!-- PASSWORD -->
                            <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input id='password' type="password" name="password" class="form-control" placeholder="password">
                            </div>

                            <!-- LOGIN BUTTON -->
                            <div class="d-flex justify-content-center form-group">
                                <input type="submit" value="Login" class="btn btn-block btn-outline-dark">    
                            </div>

                            <!-- FORGOT PASSWORD BUTTON -->
                            <a href="/forgot">Forgot password?</a>
                            
                            <div>
                                <hr>
                            </div>

                            <!-- AUTHENTICATION USING GOOGLE  -->
                            <div class="form-group">
                                    <a class="btn btn-block btn-outline-danger" href="/auth/google">
                                            <i class="fab fa-google"></i> Login using Google</a>
                                    <a class="btn btn-block btn-outline-primary" href="/auth/facebook">
                                        <i class="fab fa-facebook"></i> Login using Facebook</a>
                                </div>
                        </form>
                  
                    </div>

                    <!-- CARD FOOTER -->

                    <!-- SIGNUP BUTTON -->
                    <div class="card-footer">
                        <div>
                            Dont have an account?   
                        </div>
                        <div>
                            <a href="/signup"> Sign up here</a><br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <script>
    // INPUT FORM VALIDATION
    function formValidation(){
        var name=document.getElementById('username').value;
        var password=document.getElementById('password').value;
        if(name==''){
            alert('Please enter the username');
            return false;
        }
        else if(password==''){
            alert('Please enter the password');
            return false;
        }
        else
        {
            return true;
        }
    }
    </script>

</html>